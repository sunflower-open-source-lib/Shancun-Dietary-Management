<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list_item_menu_img"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_weight="4"
                android:src="@drawable/step_shown" />

            <TextView
                android:id="@+id/list_item_menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="宫保鸡丁"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="59dp"
                    android:layout_height="89dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="主料"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/list_item_menu_material"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="UUID:UUID:A4-B3-5E-F2UUID:A4-B3-5E-F2-B3-5E-F2"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </ScrollView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="操作步骤"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/list_item_menu_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="UUID:UUID:A4-B3-5E-F2UUID:A4-B3-5E-F2UUID:A4-B3-5E-F2UUID:A4-B3-5E-F2A4-B3-5E-F2"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </ScrollView>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>